{
	"name": "@louisbm/pgdump",
	"version": "0.2.0",
	"description": "Lightweight Node.js wrapper for PostgreSQL pg_dump.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
		"build": "tsc && tsc-alias && esbuild ./src/cli.ts --bundle --platform=node --outfile=bin/pgdump.js",
		"dev": "tsx ./src/cli.ts",
		"clean": "pnpm rimraf -rf dist bin",
		"typecheck": "tsc --noEmit",
		"check": "pnpm typecheck && pnpm check:format && pnpm biome check ./src",
		"check:ci": "pnpm check:format && pnpm biome ci ./src",
		"format": "pnpm dprint fmt && pnpm biome lint --write ./src",
		"check:format": "pnpm dprint check",
		"postinstall": "node ./dist/scripts/fetch-binary.js"
	},
	"keywords": [
		"postgresql",
		"pg_dump",
		"database",
		"dump",
		"cli",
		"typescript",
		"node"
	],
	"author": "Louis DANIEL",
	"license": "MIT",
	"packageManager": "pnpm@10.17.1",
	"type": "module",
	"homepage": "https://github.com/louisandred/pgdump",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/louisandred/pgdump.git"
	},
	"bugs": {
		"url": "https://github.com/louisandred/pgdump/issues"
	},
	"bin": {
		"pgdump": "bin/pgdump.js"
	},
	"files": [
		"dist",
		"bin"
	],
	"engines": {
		"node": ">=22.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/node": "^24.7.1",
		"cross-fetch": "^4.1.0",
		"dprint": "^0.50.2",
		"esbuild": "^0.25.10",
		"rimraf": "^6.0.1",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"commander": "^14.0.1"
	}
}
