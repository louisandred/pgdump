{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "esnext",
        "strict": true,
		"rootDir": "src",
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
		"resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@/*": ["src/*"],
		}
    },
    "include": ["src/**/*"],
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true,
	}
}
