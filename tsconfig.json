{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "esnext",
        "strict": true,
		"rootDir": ".",
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
		"resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["*"],
		}
    },
    "include": ["src/**/*", "scripts/**/*"],
}
